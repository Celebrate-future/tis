<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>tis</artifactId>
    <groupId>com.qlangtech.tis</groupId>
    <version>saturn-1.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>tis-solrcore-extend</artifactId>
  <name>tis-solrcore-extend</name>
  <url>http://maven.apache.org</url>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.sh</include>
          <include>**/*.vm</include>
          <include>**/*.dic</include>
        </includes>
      </resource>
    </resources>
    <filters>
      <filter>src/main/filter/${env}.properties</filter>
    </filters>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet />
              <filters>
                <filter>
                  <artifact>org.apache.solr:solr-core</artifact>
                  <includes>
                    <include>org/apache/solr/**</include>
                  </includes>
                  <excludes>
                    <exclude>org/apache/spark/sql/hive/thriftserver/HiveThriftServer2*</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <properties>
        <env>daily</env>
      </properties>
    </profile>
    <profile>
      <id>daily</id>
      <properties>
        <env>daily</env>
      </properties>
    </profile>
    <profile>
      <id>pre</id>
      <properties>
        <env>publish</env>
      </properties>
    </profile>
    <profile>
      <id>publish</id>
      <properties>
        <env>publish</env>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
